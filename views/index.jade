extends layout
block head
  style
    body {
      padding-top: 60px;
    }
block body
  script(type="text/ng-template",id="renderMenuItem.html")
    a(ng-href="{{item.href}}") {{item.name}} 
  script(type="text/ng-template",id="renderMenu.html")
    a.dropdown-toggle(href="", data-toggle="dropdown") {{item.name}}
      b.caret
    ul.dropdown-menu
      li.dropdown-submenu(ng-repeat='item in item.subItems', 
          ng-include="item.subItems.length === 0 ? 'renderMenuItem.html' : 'renderMenu.html'")
  div.navbar.navbar-inverse.navbar-fixed-top(ng-controller="MenuController")
    div.navbar-inner
      a.brand(href="#") AVTOMATI
      ul.nav
        li.dropdown(ng-repeat='item in menuItems',
           ng-include="item.subItems.length === 0 ? 'renderMenuItem.html' : 'renderMenu.html'")
  .container-fluid
    div
      div(ng-view)