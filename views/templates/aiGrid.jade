div(ng-show="data")
  table.table.table-bordered.table-striped.table-hover.table-condensed
    thead
      tr
        th(ng-repeat="col in data.columns") {{col.header}}
    tbody
      tr(ng-repeat="row in data.rows")
        td(ng-repeat="col in data.columns") {{row[col.name]}}
  div
    pagination(total-items="data.total",
               page="currentPage",
               items-per-page="pageSize",
               max-size="5",
               boundary-links="true",
               style="cursor:pointer;")